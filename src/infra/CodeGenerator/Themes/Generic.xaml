<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CodeGenerator.Designer.UI.Bases">

    <Style TargetType="{x:Type local:BasePage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BasePage}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!--  Toolbar  -->
                            <RowDefinition Height="*" />
                            <!--  Main  -->
                            <RowDefinition Height="28" />
                            <!--  StatusBar  -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Sidebar (فقط در ناحیه Main)  -->
                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            BorderBrush="#DDD"
                            BorderThickness="0,0,1,0">
                            <ContentPresenter Content="{TemplateBinding SidebarContent}" />
                        </Border>

                        <!--  Toolbar (بالا، کل عرض Main Content)  -->
                        <ContentPresenter
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="{TemplateBinding ToolbarContent}" />

                        <!--  Main Content (TabControl)  -->
                        <TabControl Grid.Row="1" Grid.Column="1">
                            <TabItem Header="Entity Designer">
                                <ContentPresenter Content="{TemplateBinding EntityDesignerContent}" />
                            </TabItem>
                            <TabItem Header="Generated Source">
                                <ContentPresenter Content="{TemplateBinding SourceCodeContent}" />
                            </TabItem>
                        </TabControl>

                        <!--  StatusBar (پایین، کل عرض صفحه)  -->
                        <StatusBar
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="28">
                            <!--  ...  -->
                        </StatusBar>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
