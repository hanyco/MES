<Window
    x:Class="CodeGenerator.Designer.UI.Dialogs.SelectTableDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CodeGenerator.Designer.UI.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SelectTableDialog"
    Width="400"
    Height="600"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" ToolTip="PromptBar" />
            <RowDefinition ToolTip="Content" />
            <RowDefinition Height="Auto" ToolTip="ButtonBar" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="10"
            Text="Please select a table from the list below:" />
        <TreeView
            x:Name="TableTreeView"
            Grid.Row="1"
            MouseDoubleClick="TableTreeView_MouseDoubleClick" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="OkButton"
                Click="OkButton_Click"
                Content="OK"
                IsDefault="True" />
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancel"
                IsCancel="False" />
        </StackPanel>
    </Grid>
</Window>