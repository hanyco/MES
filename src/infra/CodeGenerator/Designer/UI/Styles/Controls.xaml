<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Common controls  -->
    <Style TargetType="{x:Type Button}">
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Margin" Value="3" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="ShortButton" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="21" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Margin" Value="2,1,2,1" />
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="MinWidth" Value="80" />
        <Setter Property="Margin" Value="2,1,2,1" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="LongTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="Margin" Value="2,1,2,1" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Margin" Value="2,1,2,1" />
    </Style>
    <Style x:Key="LongTextBox" TargetType="TextBox">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Margin" Value="2,1,2,1" />
    </Style>

    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="Width" Value="200" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Margin" Value="2,1,2,1" />
    </Style>

    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Width" Value="150" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Margin" Value="2,1,2,1" />
    </Style>

    <Style TargetType="{x:Type RichTextBox}">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="Margin" Value="2,1,2,1" />
    </Style>

    <!--  Toolbar buttons  -->
    <Style x:Key="{x:Static ToolBar.ButtonStyleKey}" TargetType="Button">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width" Value="48" />
        <Setter Property="Height" Value="24" />
    </Style>

    <Style
        x:Key="LongToolbarButton"
        BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
        TargetType="Button">
        <Setter Property="Width" Value="110" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="Height" Value="24" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style x:Key="ContentGrid" TargetType="Grid">
        <Setter Property="Margin" Value="10,10,10,10" />
    </Style>
</ResourceDictionary>
