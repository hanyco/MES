<UserControl
    x:Class="CodeGenerator.Designer.UI.Bases.BasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CodeGenerator.Designer.UI.Bases"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="28" />
            <!--  StatusBar height  -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Sidebar  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            BorderBrush="#DDD"
            BorderThickness="0,0,1,0">
            <ContentControl Content="{Binding SidebarContent}" />
        </Border>

        <!--  Main Content Area  -->
        <Grid Grid.Row="0" Grid.Column="1">
            <DockPanel>
                <!--  Toolbar  -->
                <ContentControl Content="{Binding ToolbarContent}" DockPanel.Dock="Top" />
                <!--  TabControl  -->
                <TabControl>
                    <TabItem Header="Entity Designer">
                        <ContentControl Content="{Binding EntityDesignerContent}" />
                    </TabItem>
                    <TabItem Header="Generated Source">
                        <ContentControl Content="{Binding SourceCodeContent}" />
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>

        <!--  StatusBar  -->
        <StatusBar
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="28">
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock VerticalAlignment="Center" Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem Width="150" HorizontalAlignment="Right">
                <ProgressBar
                    Height="16"
                    VerticalAlignment="Center"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding Progress, Mode=OneWay}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>