<UserControl
    x:Class="CodeGenerator.Designer.UI.DtosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="New" Command="{Binding AddCommand}" />
            <Button Content="Edit" Command="{Binding EditCommand}" />
            <Button Content="Delete" Command="{Binding DeleteCommand}" />
            <Button Content="Save" Command="{Binding SaveCommand}" />
            <Button Content="Generate Code" Command="{Binding GenerateCodeCommand}" />
        </ToolBar>
        <DataGrid ItemsSource="{Binding Dtos}" SelectedItem="{Binding SelectedDto}" AutoGenerateColumns="True"/>
    </DockPanel>
</UserControl>
