<UserControl
    x:Class="CodeGenerator.Designer.UI.Controls.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <TextBox
            x:Name="ConnectionStringBox"
            Margin="0,0,0,5" />
        <StackPanel Orientation="Horizontal">
            <Button
                Content="Load"
                Width="75"
                Margin="0,0,5,0"
                Click="OnLoad" />
            <Button
                Content="Save"
                Width="75"
                Click="OnSave" />
        </StackPanel>
    </StackPanel>
</UserControl>
