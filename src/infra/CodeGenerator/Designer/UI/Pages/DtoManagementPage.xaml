<UserControl
    x:Class="CodeGenerator.Designer.UI.Pages.DtoManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bases="clr-namespace:CodeGenerator.Designer.UI.Bases"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CodeGenerator.Designer.UI.Pages"
    xmlns:common="clr-namespace:CodeGenerator.Designer.UI.Common"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="950"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <bases:BasePage>
            <bases:BasePage.ToolbarContent>
                <ToolBar>
                    <Button Content="New…" Click="NewDtoButton_Click"/>
                    <Button Content="Edit" />
                    <Button Content="Delete…" />
                    <Separator />
                    <Button Content="Generate Code…" Style="{StaticResource LongToolbarButton}" />
                    <Separator />
                    <Button Content="Save to Disk…" Style="{StaticResource LongToolbarButton}" />
                    <Button Content="Save to DB…" Style="{StaticResource LongToolbarButton}" />
                </ToolBar>
            </bases:BasePage.ToolbarContent>
            <bases:BasePage.SidebarContent>
                <ListBox />
            </bases:BasePage.SidebarContent>
            <bases:BasePage.EntityDesignerContent>
                <Grid x:Name="EntityDesignerGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Name:" />
                            <TextBox />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <TextBlock Text="Namespace:" />
                            <TextBox />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock Text="Module:" />
                            <ComboBox />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            Orientation="Horizontal">
                            <TextBlock Text="Comments:" />
                            <RichTextBox />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="2">
                            <CheckBox Content="Is Params" />
                            <CheckBox Content="Is Result" />
                            <CheckBox Content="Is ViewModel" />
                            <CheckBox Content="Is List" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Properties" />
                        <Separator Grid.Column="1" />
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ToolBar>
                            <Button Content="New" />
                            <Button Content="Delete" Command="{Binding DeletePropertiesCommand}" />
                        </ToolBar>
                        <DataGrid
                            Grid.Row="1"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="True"
                            CanUserReorderColumns="False"
                            CanUserResizeRows="False"
                            CanUserSortColumns="False"
                            SelectionMode="Extended"
                            ItemsSource="{Binding Properties}"
                            common:DataGridSelectedItemsBehavior.SelectedItems="{Binding SelectedProperties}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="Auto" Header="Name" />
                                <DataGridTextColumn Width="Auto" Header="Model" />
                                <DataGridTextColumn Width="Auto" Header="Type" />
                                <DataGridTextColumn Width="*" Header="Comments" />
                                <DataGridCheckBoxColumn Width="Auto" Header="Is Nullable" />
                                <DataGridCheckBoxColumn Width="Auto" Header="Is ReadOnly" />
                                <DataGridCheckBoxColumn Width="Auto" Header="Is List" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Name:" />
                                <TextBox />
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <CheckBox Content="Is Nullable" />
                                <CheckBox Content="Is List" />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <TextBlock Text="Type:" />
                                <ComboBox />
                                <Button Content="..." Style="{StaticResource ShortButton}" />
                            </StackPanel>
                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <TextBlock Text="Comments:" />
                                <RichTextBox />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </bases:BasePage.EntityDesignerContent>
        </bases:BasePage>
    </Grid>
</UserControl>