<UserControl
    x:Class="CodeGenerator.Designer.UI.Pages.DtoManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bases="clr-namespace:CodeGenerator.Designer.UI.Bases"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CodeGenerator.Designer.UI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <bases:BasePage>
            <bases:BasePage.ToolbarContent>
                <ToolBar>
                    <Button Content="_New…" />
                    <Button Content="_Edit…" />
                    <Button Content="_Delete…" />
                    <Separator />
                    <Button Content="_Generate Code…" />
                    <Separator />
                    <Button Content="_Save to Disk…" />
                    <Button Content="Save to _Database…" />
                </ToolBar>
            </bases:BasePage.ToolbarContent>
            <bases:BasePage.SidebarContent>
                <ListBox />
            </bases:BasePage.SidebarContent>
            <bases:BasePage.EntityDesignerContent>
                <TabControl TabStripPlacement="Left" HorizontalContentAlignment="Left">
                    <TabItem Header="General">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Name:" Width="75"/>
                                <TextBox Width="180"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="1">
                                <TextBlock Text="Namespace:" Width="75"/>
                                <TextBox Width="180"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="2">
                                <TextBlock Text="Module:" Width="75"/>
                                <ComboBox Width="180"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Source Code"></TabItem>
                </TabControl>
            </bases:BasePage.EntityDesignerContent>
        </bases:BasePage>
    </Grid>
</UserControl>