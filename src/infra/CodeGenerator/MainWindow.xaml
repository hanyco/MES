<Window
    x:Class="CodeGenerator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:CodeGenerator.Designer.UI"
    xmlns:vm="clr-namespace:CodeGenerator.Designer.UI.ViewModels"
    Title="Code Generator"
    Width="900"
    Height="600">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DtosPageViewModel}">
            <views:DtosPage />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <!--  Top menu  -->
            <RowDefinition Height="Auto" />
            <!--  Main content  -->
            <RowDefinition Height="*" />
            <!--  Status bar  -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Navigation Menu  -->
        <Menu Grid.Row="0">
            <MenuItem Command="{Binding NavigateDtosCommand}" Header="DTOs" />
            <MenuItem Command="{Binding NavigateFunctionalitiesCommand}" Header="Functionalities" />
            <!--  add more menu items as needed  -->
        </Menu>

        <!--  Content Frame / MVVM Shell  -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentPageViewModel}" />

        <!--  Status Bar  -->
        <StatusBar Grid.Row="2">
            <TextBlock Text="{Binding StatusMessage}" />
        </StatusBar>
    </Grid>
</Window>

