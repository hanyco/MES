<Window
    x:Class="CodeGenerator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Code Generator"
    Width="800"
    Height="450">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Backend">
                <MenuItem Click="ManageModels_Click" Header="Manage Models..." />
                <MenuItem Click="ManageCqrsQueries_Click" Header="Manage CQRS Queries..." />
                <MenuItem Click="ManageCqrsCommands_Click" Header="Manage CQRS Commands..." />
            </MenuItem>
            <MenuItem Header="Frontend">
                <MenuItem Click="BlazorComponents_Click" Header="Blazor Components..." />
                <MenuItem Click="BlazorPages_Click" Header="Blazor Pages..." />
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Click="Settings_Click" Header="Settings..." />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Click="About_Click" Header="About..." />
            </MenuItem>
        </Menu>
        <!--  You can add the rest of your layout here  -->
    </DockPanel>
</Window>
