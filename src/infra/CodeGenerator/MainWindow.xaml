<Window
    x:Class="CodeGenerator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Code Generator"
    Width="800"
    Height="450">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Backend">
                    <MenuItem Header="Manage _Models..." />
                    <MenuItem Header="Manage CQRS _Queries..." />
                    <MenuItem  Header="Manage CQRS _Commands..." />
                </MenuItem>
                <MenuItem Header="_Frontend">
                    <MenuItem  Header="Blazor _Components..." />
                    <MenuItem Header="Blazor _Pages..." />
                </MenuItem>
                <Separator />
                <MenuItem Header="E_xit…" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Settings..." />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About..." />
            </MenuItem>
        </Menu>
        <ContentControl x:Name="MainContent" />
    </DockPanel>
</Window>
